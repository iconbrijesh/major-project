<% layout("/layout/boilerplate") %>

    
        <h3>Create a New Listing</h3>
        <div class="row mt-3">
            <div class="col-8 offset-2">

                <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                    <div class="mb-3 ">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Enter catchy title" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="Enter description" class="form-control"
                            required>
                        </textarea>
                        <div class="invalid-feedback">
                            Please enter a short description.
                        </div>
                    </div>



                    <div class="mb-3">
                        <label for="Image" class="form-label">Image</label>
                        <input name="listing[image]"  type="file"
                            class="form-control" required />

                    </div class="mb-3">


                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="Price" class="form-label">1200</label>
                            <input type="number" name="listing[price]" placeholder="Price" class="form-control"
                                required>
                            <div class="invalid-feedback">
                                Price should be valid price.
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="Country" class="form-label">Country</label>
                            <input type="text" name="listing[country]" placeholder="India" class="form-control"
                                required>
                            <div class="invalid-feedback">
                                Please enter country name.
                            </div>

                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" placeholder="Ranchi, Jharkhand" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Location needed
                        </div>
                    </div>



                    <button type="submit" class="btn add-btn mt-3">Add</button>

                </form>
            </div>
        </div>
    